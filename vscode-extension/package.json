{
  "name": "eye-tracking-debugger",
  "displayName": "Eye Tracking Debugger",
  "description": "VS Code extension for eye-tracking based debugging assistance",
  "version": "0.1.0",
  "publisher": "your-publisher-name",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "eyeTrackingDebugger.connect",
        "title": "Eye Tracking: Connect to Backend"
      },
      {
        "command": "eyeTrackingDebugger.disconnect",
        "title": "Eye Tracking: Disconnect from Backend"
      },
      {
        "command": "eyeTrackingDebugger.toggleMode",
        "title": "Eye Tracking: Toggle Reactive/Proactive Mode"
      },
      {
        "command": "eyeTrackingDebugger.showStatus",
        "title": "Eye Tracking: Show Status"
      },
      {
        "command": "eyeTrackingDebugger.clearFeedback",
        "title": "Eye Tracking: Clear All Feedback"
      }
    ],
    "configuration": {
      "title": "Eye Tracking Debugger",
      "properties": {
        "eyeTrackingDebugger.backendHost": {
          "type": "string",
          "default": "localhost",
          "description": "Backend server host"
        },
        "eyeTrackingDebugger.websocketPort": {
          "type": "number",
          "default": 8765,
          "description": "WebSocket server port"
        },
        "eyeTrackingDebugger.apiPort": {
          "type": "number",
          "default": 8080,
          "description": "REST API server port"
        },
        "eyeTrackingDebugger.autoConnect": {
          "type": "boolean",
          "default": false,
          "description": "Automatically connect to backend on startup"
        },
        "eyeTrackingDebugger.showInlineHints": {
          "type": "boolean",
          "default": true,
          "description": "Show inline hints in the editor"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "ws": "^8.14.2"
  }
}
